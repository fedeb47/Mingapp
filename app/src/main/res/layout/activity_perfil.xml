<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seminario.mingapp2.Perfil">

    <ImageView
        android:id="@+id/ivFotoPerfil"
        android:layout_width="168dp"
        android:layout_height="98dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivFotoPerfil"
        android:layout_marginLeft="2dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_below="@id/tvNombre"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/ivFotoPerfil" />

    <TextView
        android:id="@+id/tvSeguidores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivFotoPerfil"
        android:text="Seguidores:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNseguidores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivFotoPerfil"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tvSeguidores"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSeguidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSeguidores"
        android:text="Seguidos:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNseguidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNseguidores"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tvSeguidores"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSeguir"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tvSeguidos"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="seguir"
        android:text="Seguir"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="32dp" />

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tvSeguidos"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:onClick="editarDescripcion"
        android:text="Editar descripcion"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="32dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/btnEditar"
        android:layout_marginTop="-4dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="logout"
        android:text="Log out"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="32dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@id/btnEditar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />
    </ScrollView>



    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" >

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5E35B1"
            app:itemIconSize="30dp"
            app:itemIconTint="#FFFFFF"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottom_navigation" />

    </com.google.android.material.appbar.AppBarLayout>

</RelativeLayout>