<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil">

    <ImageView
        android:id="@+id/ivFotoPerfil"
        android:layout_width="168dp"
        android:layout_height="98dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/tvSeguidores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@id/ivFotoPerfil"
        android:text="Seguidores"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNseguidores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSeguidores"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/ivFotoPerfil"
        android:text="1.235"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSeguidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@id/tvSeguidores"
        android:text="Seguidos"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNseguidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSeguidos"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/tvNseguidores"
        android:text="1.235"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="319dp"
        android:layout_height="23dp"
        android:layout_below="@id/ivFotoPerfil"
        android:layout_marginTop="6dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSeguir"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@id/tvNombre"
        android:layout_marginTop="19dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="seguir"
        android:text="Seguir"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="32dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@id/tvNombre"
        android:layout_marginTop="19dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="logout"
        android:text="Log out"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="32dp"
        android:visibility="gone"/>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" >

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5E35B1"
            app:itemIconSize="30dp"
            app:itemIconTint="#FFFFFF"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottom_navigation" />

    </com.google.android.material.appbar.AppBarLayout>

</RelativeLayout>